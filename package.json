{
  "name": "axios-record-replay-adapter",
  "version": "1.1.0",
  "description": "Sit back, relax, and enjoy automatic mocking for axios HTTP requests",
  "main": "index.js",
  "repository": "https://github.com/bmealhouse/axios-record-replay-adapter",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "private": false,
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "pkg"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/recordings"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "plugins": [
      "filenames"
    ],
    "extends": "xo-typescript",
    "etensions": [
      "ts"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "@typescript-eslint/semi": [
        "error",
        "never"
      ],
      "filenames/match-exported": [
        "error",
        "kebab",
        "^__"
      ]
    }
  },
  "devDependencies": {
    "@pika/pack": "0.5.0",
    "@pika/plugin-build-node": "0.8.1",
    "@pika/plugin-build-web": "0.8.1",
    "@pika/plugin-ts-standard-pkg": "0.8.1",
    "@types/jest": "24.9.1",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "axios": "0.19.2",
    "eslint": "6.7.2",
    "eslint-config-xo-typescript": "0.24.1",
    "eslint-plugin-filenames": "1.3.2",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "lint-staged": "10.0.2",
    "ts-jest": "25.0.0",
    "typescript": "3.7.5",
    "xo": "0.25.3"
  },
  "peerDependencies": {
    "axios": "^0.19.1"
  },
  "scripts": {
    "release": "npx @pika/pack && npm publish ./pkg",
    "test": "jest"
  }
}
