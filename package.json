{
  "name": "axios-record-replay-adapter",
  "version": "0.0.1",
  "description": "Sit back, relax, and automatically record/replay your HTTP requests",
  "main": "index.js",
  "repository": "https://github.com/bmealhouse/axios-record-replay-adapter",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "private": false,
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "watchPathIgnorePatterns": [
      "<rootDir>/recordings"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "plugins": [
      "filenames"
    ],
    "extends": "xo-typescript",
    "etensions": [
      "ts"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "filenames/match-exported": [
        "error",
        "kebab",
        "^__"
      ]
    }
  },
  "devDependencies": {
    "@pika/pack": "0.4.0",
    "@pika/plugin-build-node": "0.5.1",
    "@pika/plugin-ts-standard-pkg": "0.5.1",
    "@types/jest": "24.0.16",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "axios": "0.19.0",
    "eslint-config-xo-typescript": "0.15.0",
    "eslint-plugin-filenames": "1.3.2",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "ts-jest": "24.0.2",
    "typescript": "3.5.3",
    "xo": "0.24.0"
  },
  "peerDependencies": {
    "axios": "^0.19.0"
  },
  "scripts": {
    "build": "pack build",
    "test": "jest"
  }
}
